{
  "name": "epk",
  "version": "1.0.0",
  "description": "A simple Elm site styled with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i styles/tailwind.css -o dist/output.css",
    "watch:css": "tailwindcss -i styles/tailwind.css -o dist/output.css --watch",
    "build:elm": "elm make src/Main.elm --output=elm.js",
    "build": "npm run build:css && npm run build:elm"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17"
  }
}
